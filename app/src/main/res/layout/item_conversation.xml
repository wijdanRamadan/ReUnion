<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:padding="16dp"
    tools:layout_editor_absoluteY="81dp">

    <TextView

        android:id="@+id/conversationLetter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/magnitude_circle"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp" />


    <TextView
        android:id="@+id/opponentNameText"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="8sp"

        android:text="Anwar"
        android:textColor="#de000000"
        android:textSize="17sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/conversationLetter"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/lastMessageText"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="6sp"
        android:text="Dude can you solve this problem plea..."
        android:textColor="#8b000000"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/conversationLetter" />


</android.support.constraint.ConstraintLayout>